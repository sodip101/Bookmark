@{
    ViewBag.Title = "Home Page";
}

<section id="home" class="text-center">
    <h1 class="page-header">Bookmark Inventory Manager</h1>

    <div style="margin-bottom:50px">
        <img src="~/img/jumbotron.png" style="height:550px" alt="Alternate Text" />
    </div>

    <div class="form-group">
        <a class="btn btn-lg" href="#dashboard">View Dashboard</a>
        <a class="btn btn-lg" href="#main-search">Search Inventory</a>
    </div>
</section>

<section id="main-search" class="text-center">
    <h2>Search</h2>
    <div class="form-inline" style="margin-top:40px;">
        <input class="form-group form-control" style="width:65%;" type="text" name="mianSearch" value="" placeholder="Search" />
        <select class="form-group form-control" id="searchSelect">
            <option>Select Category</option>

        </select>
        <button class="btn">Search</button>
    </div>
</section>

<section id="dashboard" class="text-center">
    <h2>Dashboard</h2>
</section>